@using Mirantis.ReportingToolForInternship.PL.WebUI.Models.Repositories;

@model IEnumerable<Mirantis.ReportingToolForInternship.PL.WebUI.Models.ReportVM>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MentorsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOccuring)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @UserRepo.GetById(item.MentorsId).Name
                @*@Html.DisplayFor(modelItem => item.MentorsId)*@
            </td>
            <td>
                @UserRepo.GetById(item.InternsId).Name
                @*@Html.DisplayFor(modelItem => item.InternsId)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOccuring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.MentorsId == null)
                {
                    if (User.IsInRole("Intern") && item.IsDraft)
                    {
                        @Html.ActionLink("Edit intern's report", "EditInternsReport", new { id = item.Id })
                        <span> | </span>
                    }
                    @Html.ActionLink("Details intern's report", "DetailsInternsReport", new { id = item.Id })
                }
                else
                {
                    if (User.IsInRole("Mentor") && item.IsDraft)
                    {
                        @Html.ActionLink("Edit mentor's report", "EditMentorsReport", new { id = item.Id })
                        <span> | </span>
                    }
                    @Html.ActionLink("Details mentor's report", "DetailsMentorsReport", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
