@model IEnumerable<Mirantis.ReportingToolForInternship.PL.WebUI.Models.ReportVM>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MentorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOccuring)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MentorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InternName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOccuring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.MentorName))
                {
                    @Html.ActionLink("Edit intern's report", "EditInternReport", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("Edit mentor's report", "EditMentorReport", new { id = item.Id })
                }
                <span> | </span>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
