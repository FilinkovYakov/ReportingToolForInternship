@using Mirantis.ReportingTool.PL.WebUI.Models.Repositories;
@using Mirantis.ReportingTool.PL.WebUI.Constants;

@model IEnumerable<Mirantis.ReportingTool.PL.WebUI.Models.RepresentingReportVM>

<table class="table table-striped">
    <colgroup>
        <col class="col-xs-2">
        <col class="col-xs-2">
        <col class="col-xs-2">
        <col class="col-xs-2">
        <col class="col-xs-2">
        <col class="col-xs-2">
    </colgroup>
    <tbody>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.ManagerFullName)</th>
            <th>@Html.DisplayNameFor(model => model.EngineerFullName)</th>
            <th>Type :</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>Actions :</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ManagerFullName)</td>
                <td>@Html.DisplayFor(modelItem => item.EngineerFullName)</td>
                <td>@Html.DisplayFor(modelItem => item.TypeOccuring)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    @if (item.IsEngineerReport())
                    {
                        if (User.IsInRole(AppRoles.Engineer) && item.IsDraft)
                        {
                            <a href="@Url.Action("EditEngineerReport", "Report", new { id = item.Id })" class="btn btn-default">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        }
                        <a href="@Url.Action("DetailsEngineerReport", "Report", new { id = item.Id })" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                        </a>
                    }
                    else
                    {
                        if (User.IsInRole(AppRoles.Manager) && item.IsDraft)
                        {
                            <a href="@Url.Action("EditManagerReport", "Report", new { id = item.Id })" class="btn btn-default">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        }
                        <a href="@Url.Action("DetailsManagerReport", "Report", new { id = item.Id })" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
