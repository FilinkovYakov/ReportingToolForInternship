@model Mirantis.ReportingTool.PL.WebUI.Models.RepresentingReportVM

@{
    ViewBag.Title = "Details about intern's report";
}

<h2>Details intern's report</h2>

<div class="form-horizontal">
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "true",
           @value = Model.Title, @data_toggle = "tooltip", @data_placement = "bottom", @title = Model.Title } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InternsFullName, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.InternsFullName, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "true", @value = Model.InternsFullName } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TypeOccuring, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.TypeOccuring, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "true", @value = Model.TypeOccuring } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            <div class='input-group date'>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "true", @value = Model.Date } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-md-5 col-md-offset-2">
            <strong>Activities :</strong>
        </div>
        <div class="col-xs-6 col-md-5">
            <strong>Questions about activities :</strong>
        </div>
    </div>

    @foreach (var activity in Model.Activities)
    {
        <div class="form-group activity">
            <div class="col-xs-6 col-md-5 col-md-offset-2">
                <input type="text" readonly class="form-control text-box single-line input-activity" 
                       data-toggle="tooltip" data-placement="bottom" 
                       title="@activity.Description" value="@activity.Description" />
            </div>
            <div class="col-xs-6 col-md-5 composition">
                @if (activity.Questions.Any())
                {
                    foreach (var question in activity.Questions)
                    {
                        <div class="composite">
                            <input type="text" readonly class="form-control text-box single-line input-question" 
                                   data-toggle="tooltip" data-placement="bottom" 
                                   title="@question.Description" value="@question.Description" />
                        </div>
                    }
                }
                else
                {
                    <div class="composite">
                        <input type="text" readonly class="form-control text-box single-line input-question" />
                    </div>
                }
            </div>
        </div>
    }


    <div class="row">
        <div class="col-xs-10 col-md-offset-2">
            <strong>Future plans :</strong>
        </div>
    </div>

    <div class="composition future-plans">
        @foreach (var futurePlan in Model.FuturePlans)
        {
            <div class="form-group">
                <div class="col-xs-12 col-md-10 col-md-offset-2">
                    <input type="text" readonly class="form-control text-box single-line input-future-plan" 
                           data-toggle="tooltip" data-placement="bottom" 
                           title="@futurePlan.Description" value="@futurePlan.Description" />
                </div>
            </div>
        }
    </div>
</div>

@section scripts { 
    <script src="~/Scripts/Custom/setSettingsTooltips.js"></script>
}