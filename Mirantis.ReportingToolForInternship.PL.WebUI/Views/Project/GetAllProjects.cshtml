@using Mirantis.ReportingTool.PL.WebUI.Constants

@model IEnumerable<Mirantis.ReportingTool.PL.WebUI.Models.ProjectVM>

<h2>All projects</h2>

<table class="table table-striped">
	<colgroup>
		<col class="col-xs-4">
		<col class="col-xs-4">
		<col class="col-xs-4">
	</colgroup>
	<tbody>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<th>@Html.DisplayNameFor(model => model.Customer)</th>
			<th>Actions :</th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => item.Name)</td>
				<td>@Html.DisplayFor(modelItem => item.Customer)</td>
				<td>
					@if (User.IsInRole(AppRoles.Manager))
					{
						<a href="@Url.Action("EditProject", "Project", new { id = item.Id })" class="btn btn-default">
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
